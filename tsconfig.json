{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "paths": {
      "@config": ["config"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": [
    "src"
  ]
}
